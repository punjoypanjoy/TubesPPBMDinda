                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="Rp35.000,00"
                        android:textColor="#D21312"
                        android:textSize="18sp">

                    </TextView>
                </RelativeLayout>
            </LinearLayout>



